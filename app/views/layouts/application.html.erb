      </ul>
    </label>
      <% if user_signed_in? %>
        <button id="uploadButton"><span class="emoji">ðŸ“Ž</span></button>
      <ul>        
        <%= render 'form', photo: @photo %>
      </ul>
      <% end %>
    <%= yield %>
    </nav>

    <button id="scrollButton">Top</button>

    <script>
      document.getElementById('scrollButton').addEventListener('click', topFunction)

      window.onscroll = function() {scrollFunction()};

      function scrollFunction() {
        if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
          document.getElementById("scrollButton").style.display = "block";
        } else {
          document.getElementById("scrollButton").style.display = "none";
        }
      }

      // When the user clicks on the button, scroll to the top of the document
      function topFunction() {
        document.body.scrollTop = 0; // For Safari
        document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
      }

      document.getElementById('uploadButton').addEventListener('click', showDropzone)

      function showDropzone() {
        let x = document.getElementById("image-upload-dropzone");
        if (x.style.display === "block") {
          x.style.display = "none";
        } else {
          x.style.display = "block";
        }
      }
    </script>
  </body>
</html>
