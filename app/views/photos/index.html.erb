<main class="tr_wrapper">
  <h1 class=title_h1>What's Trending Near You</h1>

  <% if user_signed_in? %>
    <%= render 'form', photo: @photo %>
  <% end %>

  <div class="index-wrapper-grid">
    <section class="tr_section">
      <ul class="tr_columns">
        <% @photos.each do |photo| %>
          <li class="tr_column">
            <%= link_to photo_path(photo.id) do  %>
              <%= image_tag photo.image if photo.image.attached? %>
            <% end %>
            <p>
              112 visits
            </p>
            <p>
              Posted by: <%= photo.user.email %>
            </p>
          </li>
        <% end %> 
      </ul>
    </section>
    <div>
    <%= react_component 'Map',
        props:  {
                  token:        ENV['MAPBOX_TOKEN'],
                  coordinates:  @coordinates
                } %>
    </div>
  </div>
</main>

