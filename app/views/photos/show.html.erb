<%= react_component 'Map',
    props:  {
              token:        ENV['MAPBOX_TOKEN'],
              coordinates:  @coordinates,
              navigation: true,
              photoList: false
            } %>


<h1>Wynwood Wall Pictures</h1>

<div id="detail-wrapper">
  <div id="detail-image">
    <%= image_tag @photo.image, height: '450'%>
  </div>
  <div id="longlat">
    <p>
      Latitude: <%= @photo.image.blob.metadata["latitude"] %>
    </p>
    <p>
      Longitude: <%= @photo.image.blob.metadata["longitude"] %>
    </p>
    <p>
      <%= @photo.visits.count %> visits
    </p>
    <p>
      Posted by: some@guy.com
    </p>
  </div>

  <%= link_to "Back", photos_url %>
</div>
